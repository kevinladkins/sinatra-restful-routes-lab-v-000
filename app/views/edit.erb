<h1>Edit Recipe</h1>

<form method = "post" action = "/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value ="patch">
  <h3>Name: <input id = "name" type = "text" name = "name" placeholder ="<%=@recipe.name%>"></h3>
  <h3>Ingredients: <input id = "ingredients" type = "text" name = "ingredients" placeholder ="<%=@recipe.ingredients%>"></h3>
  <h3>Cook Time: <input id = "cook_time" type = "text" name = "cook_time" placeholder ="<%=@recipe.cook_time%>"></h3>
  <input type = "submit" value = "submit">
</form>
